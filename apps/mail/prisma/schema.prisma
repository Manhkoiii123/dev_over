generator client {
  provider = "prisma-client"
   output   = "../generator"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum VerificationCodeType {
  EMAIL_CONFIRMATION
  PASSWORD_RESET
}


model VerificationCode {
  id        Int      @id @default(autoincrement())
  email     String
  code      String
  type      VerificationCodeType
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@unique([email, type, code])
  @@unique([email,type])
  @@index([expiresAt])
}
